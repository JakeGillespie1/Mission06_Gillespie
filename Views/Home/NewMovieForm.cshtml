@model Movies
@{
    ViewData["Title"] = "New Movie Form";
}
<h1>@ViewData["Title"]</h1>

<p>Use this form to enter movies you would like to add to the list.</p>

<form method="post">
    <input type="hidden" asp-for="MovieId" />

    <!--In our model we will need a spot for each of these inputs-->
    <label asp-for="CategoryId">Category</label>
    <select asp-for="CategoryId">
     @foreach (Categories category in ViewBag.Categories)
    {
        <option value="@category.CategoryId">@category.Category</option>
    }
    </select>
    <br />
    <label asp-for="Title">Title</label>
    <input required asp-for="Title" />
    <br />
    <!--1878 was the year of the first supposed movie-->
    <label asp-for="Year">Year</label>
    <input required min="1888" max="@DateTime.Now.Year" asp-for="Year" />
    <br />
    <label asp-for="Director">Director</label>
    <input required asp-for="Director" />
    <br />
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="Edited">Is this movie edited?</label>
    <select asp-for="Edited">
        <option value="true">Y</option>
        <option value="false">N</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="Notes">Notes</label>
    <textarea maxlength="25" asp-for="Notes"></textarea>
    <br />
    <button type="submit">Submit Form</button>

    <!--Give us a validation summary here, and it will print out any error messages about anything we have incorrectly submitted in our model-->
    <div asp-validation-summary="All"></div>
</form>
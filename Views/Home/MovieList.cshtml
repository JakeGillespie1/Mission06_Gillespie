@{
}
<!--Get the list of objects all set up and brought in properly-->
@model List<Movie>

<h1>Movie List</h1>
<table class="table table-bordered">
    <thead class="fw-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent to</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Category.CategoryName</td>
            <td>@movie.Title</td>
            <td>@movie.Year</td>
            <td>@movie.Director</td>
            <td>@movie.Rating</td>
            <td>@movie.Edited</td>
            <td>@movie.LentTo</td>
            <td>@movie.Notes</td>
            <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@movie.MovieId">Edit</a></td>
            <td><a class="btn btn-warning" asp-controller="Home" asp-action="Delete" asp-route-id="@movie.MovieId">Delete</a></td>
        </tr>
    }
    </tbody>
</table>